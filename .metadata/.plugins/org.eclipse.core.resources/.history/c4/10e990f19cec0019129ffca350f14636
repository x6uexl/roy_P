package com.lemone.java.maven.day02;

import java.io.File;
import java.io.IOException;

import com.sun.xml.internal.bind.v2.runtime.reflect.opt.FieldAccessor_Short;

public class FileDemo {

	public static void main(String[] args) throws IOException {
		// 判断目录是否存在
//		String  path1="/Users/roy/Desktop/NikeJiang/5/test.txt";//写一个不存在的文件路径或者文件目录
//		File file= 	new File(path1);
////		System.out.println(file.exists());//打印出判断结果文件夹是否存在，结果为false
//		
//		file.mkdirs();//通过file.mkdirs()去创建文件目录
//		file.createNewFile();//通过file.createNewFile()去创建文件
//		System.out.println("finish");//这个时候发现在/Users/roy/Desktop/NikeJiang/目录下新增了5文件目录
//		//如果在创建文件之前没有创建目录，则需要先创建目录
//		
		String path1 = "/Users/roy/Desktop/NikeJiang/6/test.txt";
		File dir = new File("/Users/roy/Desktop/NikeJiang/6");
		System.out.println("创建目录：/Users/roy/Desktop/NikeJiang/6");
		dir.mkdirs();
		System.out.println("创建文件：/Users/roy/Desktop/NikeJiang/6/test.txt");
		File file = new File(path1);
		file.createNewFile();
		System.out.println("finish");
	}

}
