package com.lemone.java.maven.day02;

import java.io.File;
import java.io.IOException;

import com.sun.xml.internal.bind.v2.runtime.reflect.opt.FieldAccessor_Short;

public class FileDemo {
	
	public static void main(String[] args) throws IOException {
		//判断目录是否存在
		String  path1="/Users/roy/Desktop/NikeJiang/5";//写一个不存在的文件路径或者文件目录
		File file= 	new File(path1);
//		System.out.println(file.exists());//打印出判断结果文件夹是否存在，结果为false
		
		file.mkdirs();//通过file去创建文件目录
		file.createNewFile();
		System.out.println("finish");//这个时候发现在/Users/roy/Desktop/NikeJiang/目录下新增了5文件目录
		
		
	}

}
